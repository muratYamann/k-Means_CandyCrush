<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#000"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:background="@drawable/button"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read and Converter"
        android:textStyle="bold"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        android:background="@drawable/button"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="K-Means "
        android:textStyle="bold"
        android:id="@+id/btnKMeans"
        android:layout_below="@+id/etClusterNumber"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:hint="Enter Number of Cluster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etClusterNumber"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:textStyle="bold" />


    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="easy level"
        android:textStyle="bold"
        android:background="@drawable/buton2"
        android:id="@+id/BTNseviye1"
        android:layout_above="@+id/BTNseviye2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@drawable/buton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="middle level"
        android:id="@+id/BTNseviye2"
        android:textStyle="bold"
        android:layout_above="@+id/BTNseviye3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="difficult level"
        android:background="@drawable/button"
        android:id="@+id/BTNseviye3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:text=""
        android:textColor="#fff"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:background="@drawable/button"
        android:layout_below="@+id/btnKMeans"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
